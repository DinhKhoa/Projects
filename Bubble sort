#include <iostream>
using namespace std;
void printarr(int a[],int length){
    cout << "[" ;
    for (int i = 0;i < length; i++){
    cout << a[i] << "," ;
    }
    cout<< "]" <<  endl;
}
int main(){
    int temp,length =10,a[length],input;
    cout << "Number in array ? "<< endl;
    cin >> length ;
    for (int i = 0; i< length;i++){
        cout << "Enter index " << i << endl;
    cin >> a[i];
}
    cout << "Your array " ;
    printarr (a, length);
    for (int i =0;i < length;i++){
        for(int j = 0;j < length;j++){
            if (a[j] > a[j+1]){
                temp = a[j];
                a[j] = a[j+1];
                a[j+1] = temp;
            }
        }
     }
     cout << "Sorted Array ";
     printarr (a, length);
     cout << "Largest num " << a[length -1] << endl;
     return 0; }

